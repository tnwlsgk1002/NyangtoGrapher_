<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NyangtoGrapher" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="MainText">
        <item name="android:fontFamily">@font/nanum_square_round_eb</item>
        <item name="android:textColor">@color/dark_brown</item>
    </style>
    <style name="MenuText" parent="MainText">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Button" parent="MainText">
        <item name="background">@drawable/basic_button</item>
        <item name="android:textSize">25sp</item>
    </style>
    <style name="DialogTitle" parent="MainText">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/dark_brown</item>
    </style>
    <style name="DialogContents" parent="MainText">
        <item name="android:fontFamily">@font/nanum_square_round_eb</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/dark_brown</item>
    </style>
    <style name="DialogAccentContents" parent="DialogContents">
        <item name="android:textColor">@color/pink</item>
    </style>
    <style name="DialogButton" parent="Button">
        <item name="android:textSize">20sp</item>
    </style>
</resources>