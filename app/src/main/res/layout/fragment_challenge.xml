<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="viewModel"
            type="kr.co.nyangtographer.android.nyangtographer.MainViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/ib_left_shift"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="50dp"
                android:background="@drawable/vertical_shift"
                android:visibility="invisible"
                android:rotation="90" />

            <TextView
                android:id="@+id/tv_img_context"
                style="@style/MainText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:gravity="center"
                android:text="@string/quest_img_name"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/ib_right_shift"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="50dp"
                android:background="@drawable/vertical_shift"
                android:rotation="270" />
        </LinearLayout>

        <TextView
            style="@style/MainText"
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="title"
            android:textSize="25sp"
            android:textColor="@color/lawn_green"/>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <ImageView
                android:id="@+id/iv_quest_img"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/image_view_background"
                android:clipToOutline="true"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_explan_cat" />

            <ImageView
                android:id="@+id/iv_challenge_img"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/image_view_background"
                android:clipToOutline="true"
                android:scaleType="fitCenter"
                android:visibility="invisible"
                android:src="@drawable/ic_explan_cat" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_select_camera"
                style="@style/Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/basic_button"
                android:paddingHorizontal="20dp"
                android:text="사진 선택" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_select_challenge"
                style="@style/Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/basic_button"
                android:text="도 전" />
        </LinearLayout>

    </LinearLayout>
</layout>
