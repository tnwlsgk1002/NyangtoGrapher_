<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="viewModel"
            type="kr.co.nyangtographer.android.nyangtographer.MainViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/background">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_quest_img"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src="@drawable/ic_explan_cat"
                android:background="@color/earth"
                android:scaleType="fitCenter"/>
            <ImageView
                android:id="@+id/iv_challenge_img"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_explan_cat"
                android:background="@color/earth"
                android:scaleType="fitCenter"/>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_select_challenge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="도전"
            style="@style/MainText"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:background="@drawable/basic_button"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_select_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingHorizontal="20dp"
            android:text="다시 불러오기"
            style="@style/MainText"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:background="@drawable/basic_button"
            />

    </LinearLayout>
</layout>
