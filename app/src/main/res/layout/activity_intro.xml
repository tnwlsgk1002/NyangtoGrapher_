<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:id="@+id/ll_activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".IntroActivity"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/background">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/ic_logo">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="반려묘 순간포착"
            android:textSize="20sp"
            android:textColor="@color/dark_brown"
            android:fontFamily="@font/nanum_square_round_eb"
            android:paddingHorizontal="15dp"
            android:paddingVertical="5dp"
            android:background="@drawable/rounded_corners_100"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:fontFamily="@font/bmuua"
                android:text="냥토그래퍼"
                android:textColor="@color/dark_brown"
                android:textSize="70sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Nyangtographer"
                android:fontFamily="@font/thefaceshop_inklopquid"
                android:textColor="@color/dark_brown"
                android:textSize="30sp"/>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/translucent_black"/>
            <TextView
                android:id="@+id/tv_torch_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:gravity="center"
                android:text="게임을 시작하려면 터치하세요"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:fontFamily="@font/nanum_square_round_eb"
                />
        </FrameLayout>

    </LinearLayout>
</layout>